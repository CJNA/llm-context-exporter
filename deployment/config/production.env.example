# Production Environment Configuration
# Copy this file to production.env and fill in the actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
POSTGRES_DB=llm_context_exporter
POSTGRES_USER=llm_user
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://llm_user:your-secure-database-password@postgres:5432/llm_context_exporter

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379/0

# Stripe Configuration (Payment Processing)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# Application Configuration
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes
SESSION_TIMEOUT_HOURS=1
UPLOAD_FOLDER=/app/uploads
OUTPUT_FOLDER=/app/outputs

# Security Configuration
ENFORCE_HTTPS=true
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email Configuration (for receipts and notifications)
SMTP_SERVER=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@your-domain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@your-domain.com

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Beta Program Configuration
BETA_PROGRAM_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
UPLOAD_RATE_LIMIT_PER_HOUR=10

# SSL Configuration (for Let's Encrypt)
DOMAIN_NAME=your-domain.com
EMAIL_FOR_SSL=admin@your-domain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1